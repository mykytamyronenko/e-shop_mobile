<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4C8BC7"
                android:padding="8dp"
                android:text="Title"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4C8BC7"
                android:padding="8dp"
                android:text="Price"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4C8BC7"
                android:padding="8dp"
                android:text="Category"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4C8BC7"
                android:padding="8dp"
                android:text="State"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4C8BC7"
                android:padding="8dp"
                android:text="Quantity"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tv_articleItemFragment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#D0CFCF"
                android:padding="8dp"
                android:text="Mouse" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#D0CFCF"
                android:padding="8dp"
                android:text="15" />

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#D0CFCF"
                android:padding="8dp"
                android:text="Electronics" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#D0CFCF"
                android:padding="8dp"
                android:text="used" />

            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#D0CFCF"
                android:padding="8dp"
                android:text="3" />
        </TableRow>

    </TableLayout>
</HorizontalScrollView>
